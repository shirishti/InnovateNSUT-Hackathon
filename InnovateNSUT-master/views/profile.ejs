<!DOCTYPE html>
<% var patientName; %>
<% var patientAge; %>
<% var patientEmail; %>
<% var patientGender; %>
<% var patientProfilePic; %>
<% var patientPreviousAppointment; %>
<% var patientUpcomingAppointment; %>
<% var patientPreviousMedicalIssue; %>
<% var patientUpcomingMedicalIssue; %>


<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/9caaa1478d.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Yusei+Magic&display=swap" rel="stylesheet"/>
    <link rel="shortcut icon" type="image/x-icon" href="https://media.flaticon.com/dist/min/img/favicon.ico" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/style.css" />
    <title>HelTH+</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-primary navbar-light sticky-top">
      <div class="container">
        <a href="index" class="navbar-brand"><img src="img/logo.png"></a>
        <button
          class="navbar-toggler"
          data-toggle="collapse"
          data-target="#navbarCollapse"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navbarCollapse" class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="index" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
              <a href="vaccination" class="nav-link">Vaccination</a>
            </li>
            <li class="nav-item">
              <a href="appointment" class="nav-link">Appointments</a>
            </li>
            <li class="nav-item">
              <a href="profile" class="nav-link active">Profile</a>
            </li>
            <li class="nav-item">
              <a href="contact" class="nav-link">Contact Us</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="main-body py-4">
        <div class="row gutters-sm">
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                  <img
                    src= <%= patientProfilePic %>
                    alt="Admin"
                    class="rounded-circle"
                    width="150"
                  />
                  <div class="mt-3">
                    <h4><%= patientName %></h4>
                  </div>
                  <form method="GET" action="/logout">
                    <button class="btn btn-danger mx-auto" type="submit">Logout</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card mb-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Age</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%= patientAge %></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Gender</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%= patientGender %></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%= patientEmail %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-md-6">
          <div class="card card-body text-center m-4 p-4">
            <h5 class="card-title">Previous Appointment</h5>
            <div class="d-flex justify-content-center align-items-center">
              <i class="fas fa-hand-holding-medical fa-5x h-100 w-50"></i>
              <div class="issue">
                <p class="font-weight-bold h-50"><%= patientPreviousMedicalIssue %></p>
                <p class="lead h-50"><%= patientPreviousAppointment %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card card-body text-center m-4 p-4">
            <h5 class="card-title">Upcoming Appointment</h5>
            <div class="d-flex justify-content-center align-items-center">
              <i class="fas fa-medkit fa-5x h-100 w-50"></i>
              <div class="issue">
                <p class="font-weight-bold h-50"><%= patientUpcomingMedicalIssue %></p>
                <p class="lead h-50"><%= patientUpcomingAppointment %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer id="main-footer" class="bg-dark text-center pt-3">
      <div class="container">
        <div class="row">
          <div class="col-md-6 mx-auto">
            <p class="text-white lead">
              All Rights Reserved, Copyright &copy; 2021
            </p>
          </div>
        </div>
      </div>
    </footer>

    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
      integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"
      integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
      crossorigin="anonymous"
    ></script>
    <script src="js/main.js"></script>
  </body>
</html>
